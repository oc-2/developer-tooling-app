{
  "name": "developer-tooling-app",
  "version": "1.0.0",
  "description": "A Node.js application configured with modern developer tooling for code quality and commit management",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "nodemon src/index.js",
    "format": "prettier --write .",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^20.0.0",
    "@eslint/js": "^9.30.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.0.1",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "npm run lint",
      "npm run format"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "eslint": "^9.0.0"
  },
  "engines": {
    "node": "^18.18.0 || ^20.9.0 || >=21.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oc-2/developer-tooling-app.git"
  },
  "author": "oc-2",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oc-2/developer-tooling-app/issues"
  },
  "homepage": "https://github.com/oc-2/developer-tooling-app#readme",
  "packageManager": "yarn@4.10.3"
}
